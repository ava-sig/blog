# Production environment for docker-compose.prod.yml
# Copy to .env.prod and adjust values

# Docker Hub namespace and tag to deploy
DOCKER_NS=ava2016
TAG=v0.2.1

# Public domains
# Web front-end domain (where Nuxt runs behind Nginx)
WEB_DOMAIN=anghene.de
# Public API domain used in image URLs and CORS
API_DOMAIN=api.anghene.de

# Nuxt web runtime
NUXT_PUBLIC_API_BASE=https://${API_DOMAIN}
# Optional: Fallback social image used when a post has no image
NUXT_PUBLIC_SOCIAL_FALLBACK=

# API runtime
CORS_ORIGIN=https://${WEB_DOMAIN}
PUBLIC_BASE_URL=https://${API_DOMAIN}
JWT_SECRET=change-me

# Optional DB (not used yet by current API implementation)
DATABASE_URL=postgres://user:pass@host:5432/dbname
